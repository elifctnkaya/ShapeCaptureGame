<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/textViewScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="0"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pacman"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="288dp"
        android:layout_marginEnd="291dp"
        android:layout_marginBottom="323dp"
        android:background="@drawable/shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.551"
        app:srcCompat="@drawable/packman" />

    <ImageView
        android:id="@+id/shape1"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:srcCompat="@drawable/shape1"
        tools:layout_editor_absoluteX="201dp"
        tools:layout_editor_absoluteY="187dp" />

    <ImageView
        android:id="@+id/shape2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:srcCompat="@drawable/shape2"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="105dp" />

    <ImageView
        android:id="@+id/shape3"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:srcCompat="@drawable/shape3"
        tools:layout_editor_absoluteX="264dp"
        tools:layout_editor_absoluteY="117dp" />

    <ImageView
        android:id="@+id/shape4"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:srcCompat="@drawable/shape4"
        android:background="@drawable/shape"
        tools:layout_editor_absoluteX="291dp"
        tools:layout_editor_absoluteY="186dp" />

    <TextView
        android:id="@+id/textViewPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="182dp"
        android:layout_marginBottom="80dp"
        android:text="Oyuna Başlamak İçin Tıkla"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pacman" />
</androidx.constraintlayout.widget.ConstraintLayout>